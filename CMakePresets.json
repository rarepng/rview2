{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "description": "minimum",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/dist/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_BUILD_TYPE": "${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dbg",
      "inherits": "base",
      "displayName": "Debug",
      "description": "Debug build with GCC, Ninja, C++26"
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release",
      "description": "Release build with GCC, Ninja, C++26"
    },
    {
      "name": "relwdbg",
      "inherits": "base",
      "displayName": "Release w Debug Info",
      "description": "Release with GDB Symbols"
    },
    {
      "name": "dist",
      "inherits": "base",
      "displayName": "Distribution",
      "description": " HW RT no AVX512"
    },
    {
      "name": "bleed",
      "inherits": "base",
      "displayName": "bleeding edge",
      "description": "was going to be the avx-512 builds"
    },
    {
      "name": "sanitize",
      "inherits": "base",
      "displayName": "Sanitize ASan",
      "description": "for finding memory corruptions"
    },
    {
      "name": "clanged",
      "inherits": "base",
      "displayName": "clang++uml",
      "description": "diagrams and other useless stuff",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-DCLANG_UML"
      }
    },
    {
      "name": "mermaid",
      "inherits": "base",
      "displayName": "mermaid",
      "description": "gcc mermaid"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "dbg"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "releasewithdebuginfo",
      "configurePreset": "relwdbg"
    },
    {
      "name": "distribution",
      "configurePreset": "dist"
    },
    {
      "name": "bleedingedge",
      "configurePreset": "bleed"
    },
    {
      "name": "sanitize",
      "configurePreset": "sanitize"
    },
    {
      "name": "clanged",
      "configurePreset": "clanged"
    },
    {
      "name": "mermaid",
      "configurePreset": "mermaid"
    }
  ]
}